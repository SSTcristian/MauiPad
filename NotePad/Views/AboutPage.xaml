<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotePad.Views.AboutPage"
             Title="Sobre">
    <VerticalStackLayout>
        <HorizontalStackLayout Spacing="10" Margin="10">
            <Image Source="dotnet_bot.png"
                   HeightRequest="64"/>

            <Label FontSize="22" FontAttributes="Bold" Text="Notepad" VerticalOptions="End" />
            <Label FontSize="22" Text="v1.0" VerticalOptions="End" />
        </HorizontalStackLayout>

        <Label Text="Aplicativo em .NET MAUI" />
        <Button x:Name="btnAbout" Text="Learn more..." Clicked="btnAbout_Clicked"/>  
    </VerticalStackLayout>
</ContentPage>